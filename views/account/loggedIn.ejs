<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/');
} %>


<%#- messages() %>
<%- messages() %>
<div class="box">
 <% if (locals.accountData.account_type === 'Client') { %>
    <h2 class="banner">Welcome <%= locals.accountData.account_firstname %></h2>
    <p><a href="/account/update-account?id=<%= locals.accountData.account_id %>">Update Account Information</a></p>

<% } else if (locals.accountData.account_type === 'Employee' || locals.accountData.account_type === 'Admin') { %>
    <h2 class="banner">Welcome <%= locals.accountData.account_firstname %></h2>
    <p><a href="/account/update-account?id=<%= locals.accountData.account_id %>">Update Account Information</a></p>
    <h2>Inventory Management:</h2>
    <p><a href="/site-name/inv/">Access Inventory Management</a></p>
<%} %> 


<h2>Message Center:</h2>
<li class="red">
    <% if (unread > 0) { %>
      You have <%= unread %> unread messages.
    <% } else { %>
      You are all caught up on your messages.
    <% } %>
    </li>

<li>Go to <a href="/account/inbox">inbox</a></li>
</div>
