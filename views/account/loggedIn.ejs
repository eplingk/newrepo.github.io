<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/');
} %>


<%#- messages() %>
<%- messages() %>
<div class="box">
 <% if (locals.accountData.account_type === 'Client') { %>
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>
    <p><a href="/account/update-account?id=<%= locals.accountData.account_id %>">Update Account Information</a></p>

<% } else if (locals.accountData.account_type === 'Employee' || locals.accountData.account_type === 'Admin') { %>
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>
    <p><a href="/account/update-account?id=<%= locals.accountData.account_id %>">Update Account Information</a></p>
    <h3>Inventory Management</h3>
    <p><a href="/site-name/inv/">Access Inventory Management</a></p>
<%} %> 
</div>

